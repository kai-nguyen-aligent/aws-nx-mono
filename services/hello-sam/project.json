{
    "name": "hello-sam",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "services/hello-sam/src",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "{projectRoot}",
                "color": true,
                "command": "sam build"
            }
        },
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "{projectRoot}",
                "color": true,
                "command": "sam deploy"
            }
        },
        "validate": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "{projectRoot}",
                "color": true,
                "command": "sam validate"
            }
        },
        "remove": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "{projectRoot}",
                "color": true,
                "command": "sam delete"
            }
        },
        "check-types": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "{projectRoot}",
                "color": true,
                "command": "tsc --noEmit --pretty"
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["services/customers/**/*.ts"],
                "maxWarnings": 0
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/services/customers"
            }
        }
    },
    "tags": ["service", "general", "hello-sam"]
}